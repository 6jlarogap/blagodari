<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_agreement"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:text="@string/btn_back"
            android:onClick="@{() -> AcquaintanceNavigator.toGreeting()}"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="@string/btn_agree"
            android:onClick="@{() -> AcquaintanceNavigator.toEnter()}"/>

    </FrameLayout>

    <data>

        <variable
            name="AcquaintanceNavigator"
            type="com.vsdrozd.blagodarie.ui.acquaintance.AcquaintanceNavigator" />

    </data>

</layout>