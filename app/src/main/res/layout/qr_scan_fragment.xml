<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="@{ViewModel.isShowExplanation() ? View.VISIBLE : View.GONE}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_msg_camera_permission_explanation" />

        <Button
            android:id="@+id/btnRequirePermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="blagodarie.rating.ui.qrscan.QrScanViewModel" />

    </data>

</layout>